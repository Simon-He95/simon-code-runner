{
  "publisher": "simonhe",
  "name": "simon-code-runner",
  "displayName": "simon-code-runner",
  "version": "0.0.1",
  "description": "simon-code-runner",
  "author": "Simon He <https://github.com/Simon-He95>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/Simon-He95",
  "homepage": "https://github.com/Simon-He95/simon-code-runner#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Simon-He95/simon-code-runner"
  },
  "bugs": {
    "url": "https://github.com/Simon-He95/simon-code-runner/issues"
  },
  "sponsor": {
    "url": "https://github.com/Simon-He95/sponsor"
  },
  "keywords": [
    "vscode",
    "vscode-use",
    "vscode-template"
  ],
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.96.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "simon-code-runner.runFileInTerminal",
        "title": "Run File in Terminal",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "simon-code-runner.runFileInTerminal",
          "when": "resourceExtname == .ts || resourceExtname == .js",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "dev": "nr build",
    "test": "vitest",
    "build": "tsup",
    "pack": "vsce package --no-dependencies",
    "lint": "eslint . --cache",
    "lint:fix": "nr lint --fix",
    "publish": "vsce publish --no-dependencies",
    "typecheck": "tsc --noEmit",
    "release": "nr build --minify && bumpp && nr publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.12.1",
    "@types/node": "^18.19.68",
    "@types/vscode": "^1.96.0",
    "@vscode-use/utils": "0.1.32",
    "@vscode/vsce": "^3.2.1",
    "bumpp": "^9.9.2",
    "eslint": "^9.17.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
